{
  "name": "dn-02",
  "version": "0.1.0",
  "description": "Beautiful browser-based audio denoising in a single line of code",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm run build:wasm && pnpm run build:ts",
    "build:wasm": "cd rust && wasm-pack build --target web --out-dir ../src/wasm",
    "build:ts": "tsup",
    "test": "vitest",
    "test:rust": "cd rust && cargo test",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "audio",
    "denoising",
    "noise-reduction",
    "rnnoise",
    "webassembly",
    "wasm",
    "react",
    "nextjs",
    "browser"
  ],
  "author": "",
  "license": "BSD-3-Clause",
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wasm-pack": "^0.12.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
